# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot Mode (webhook or polling)
BOT_MODE=polling
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8443

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ytdl_bot
REDIS_URL=redis://localhost:6379/0

# Download Configuration
DOWNLOAD_DIR=/tmp/ytdl_downloads
MAX_CONCURRENT_DOWNLOADS=3
MAX_FILE_SIZE_MB=2048
CHUNK_SIZE_MB=20

# Aria2 Configuration
ARIA2_RPC_URL=http://localhost:6800/rpc
ARIA2_SECRET=your_aria2_secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=50
RATE_LIMIT_PER_DAY=200

# Admin Configuration
ADMIN_IDS=123456789,987654321
SUPPORT_CHAT_ID=-1001234567890

# Channel Requirements
REQUIRED_CHANNELS=-1001234567890,-1009876543210
CHECK_SUBSCRIPTION=true

# Free Plan Limits
FREE_DAILY_DOWNLOADS=5
FREE_MAX_FILE_SIZE_MB=100
FREE_WAIT_TIME_SECONDS=30

# Payment Configuration
PAYMENT_PROVIDER_TOKEN=your_payment_token
CURRENCY=USD

# Features Toggle
ENABLE_ANALYTICS=true
ENABLE_CACHE=true
ENABLE_QUEUE=true
ENABLE_AFFILIATE=true

# Workers Configuration
PYROGRAM_WORKERS=10
DOWNLOAD_WORKERS=3
UPLOAD_WORKERS=3